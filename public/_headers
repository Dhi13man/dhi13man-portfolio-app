# Cloudflare Pages Headers Configuration
# https://developers.cloudflare.com/pages/configuration/headers/

# =============================================================================
# SECURITY HEADERS (applied to all routes)
# =============================================================================
/*
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  X-DNS-Prefetch-Control: on

# =============================================================================
# CACHE HEADERS
# =============================================================================

# Next.js static assets with content hash - immutable forever
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Images and other assets - cache for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Favicon and icons - cache for 1 year
/favicon.ico
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - always revalidate with server
/
  Cache-Control: public, max-age=0, must-revalidate

/*.html
  Cache-Control: public, max-age=0, must-revalidate

# JSON data files - short cache, revalidate frequently
/*.json
  Cache-Control: public, max-age=3600, stale-while-revalidate=86400

# llms.txt and robots.txt - cache for 1 day
/llms.txt
  Cache-Control: public, max-age=86400

/robots.txt
  Cache-Control: public, max-age=86400

/sitemap.xml
  Cache-Control: public, max-age=86400
